<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Additems">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:inputType="textCapSentences"
        android:fontFamily="@font/ubuntul"
        android:id="@+id/item"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Item Name"
        android:textColorHint="@color/black"/>

    <EditText
        android:fontFamily="@font/ubuntul"
        android:id="@+id/price"
        android:textSize="15sp"
        android:inputType="numberSigned"
        android:layout_width="130dp"
        android:layout_toEndOf="@+id/item"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Item Price (Rs)"
        android:textColorHint="@color/black"/>


    <Button
        android:fontFamily="@font/ubuntu"
        android:id="@+id/additem"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:background="@drawable/custom_button"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/price"
        android:text="Add Item"
        android:layout_marginBottom="20dp">
    </Button>

    <com.example.bookmytiffin.speciallistview
        android:id="@+id/itempricelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@id/additem">
    </com.example.bookmytiffin.speciallistview>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>