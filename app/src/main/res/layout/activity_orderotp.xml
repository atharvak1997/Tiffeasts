<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Orderotp">

    <TextView
        android:fontFamily="@font/ubuntu"
        android:id="@+id/orderstatus"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:text="Order Status"/>


    <Button
        android:id="@+id/rejectorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu"
        android:layout_below="@+id/orderstatus"
        android:background="@drawable/custom_button"
        android:layout_margin="50dp"
        android:text="Reject"/>

    <Button
        android:fontFamily="@font/ubuntu"
        android:id="@+id/acceptorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderstatus"
        android:layout_toRightOf="@+id/rejectorder"
        android:background="@drawable/custom_button"
        android:layout_margin="50dp"
        android:text="Accept"
        />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/otptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu"
        android:layout_below="@+id/orderstatus"
        android:layout_centerHorizontal="true"
        android:hint="Enter Order Password"/>

    <Button
        android:background="@drawable/custom_button"
        android:id="@+id/checkotp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Enter Password"
        android:fontFamily="@font/ubuntu"
        android:layout_margin="7dp"
        android:layout_below="@id/otptext"
        android:layout_centerHorizontal="true"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottedeliver"
        app:lottie_autoPlay="true"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/orderstatus"
        app:lottie_rawRes="@raw/orderdelivered"
        android:layout_centerHorizontal="true"
        android:visibility="gone">
    </com.airbnb.lottie.LottieAnimationView>

</RelativeLayout>